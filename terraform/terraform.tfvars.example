###############################################################################
# Example Terraform Variables File
#
# Copy this file to terraform.tfvars and customize for your environment
# cp terraform.tfvars.example terraform.tfvars
#
# IMPORTANT: terraform.tfvars contains sensitive values and should NOT be
# committed to version control. Add it to .gitignore
###############################################################################

###############################################################################
# General Configuration
###############################################################################

aws_region   = "us-east-1"
project_name = "loyalty-backend"
environment  = "dev"

###############################################################################
# DynamoDB Configuration
###############################################################################

# Leave empty to auto-generate name
dynamodb_table_name = ""

# Use PAY_PER_REQUEST for development, PROVISIONED for production with predictable load
dynamodb_billing_mode = "PAY_PER_REQUEST"

# Only used if billing_mode = "PROVISIONED"
dynamodb_read_capacity     = 5
dynamodb_write_capacity    = 5
dynamodb_gsi_read_capacity = 5
dynamodb_gsi_write_capacity = 5

# Auto-scaling (only for PROVISIONED mode)
enable_autoscaling            = true
dynamodb_autoscaling_read_max = 100
dynamodb_autoscaling_write_max = 100

# Backup and recovery
enable_point_in_time_recovery = true

# Advanced features
enable_dynamodb_streams = false
enable_message_ttl      = false

# Encryption (leave empty to use AWS managed key)
kms_key_arn = ""

###############################################################################
# S3 Configuration
###############################################################################

# Leave empty to auto-generate unique bucket name
s3_bucket_name = ""

# Versioning (useful for file history, but increases storage costs)
enable_s3_versioning = false

# Encryption (leave empty to use AES256)
s3_kms_key_arn = ""

# CORS configuration - update with your actual frontend URLs
cors_allowed_origins = [
  "http://localhost:3000",
  "https://your-frontend-domain.com"
]

# Lifecycle policy
enable_s3_lifecycle         = true
s3_glacier_transition_days  = 90
s3_expiration_days          = 365

# Access logging (creates additional bucket for logs)
enable_s3_logging = false

###############################################################################
# Optional Services
###############################################################################

# SQS Queue for notifications
enable_sqs = false

# SNS Topic for alerts
enable_sns = false
sns_kms_key_arn = ""

# Email addresses for SNS alerts (only if enable_sns = true)
sns_email_subscriptions = [
  # "admin@example.com",
  # "support@example.com"
]

###############################################################################
# Monitoring
###############################################################################

enable_cloudwatch_alarms     = true
s3_size_alarm_threshold_gb   = 100

###############################################################################
# Additional Tags
###############################################################################

additional_tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Compliance  = "None"
}
